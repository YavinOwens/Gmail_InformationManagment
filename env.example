# Gmail API Configuration
CREDENTIALS_FILE=credentials.json
TOKEN_FILE=token.pickle
DAYS_BACK=30
MAX_RESULTS=100

# Security Configuration
ENCRYPTION_KEY_FILE=encryption.key
LOG_LEVEL=INFO

# Gmail API Scopes
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.modify

# Application Settings
APP_ENV=development
DEBUG=True
PORT=5000

# Database Configuration (if using)
DATABASE_URL=sqlite:///gmail_workflow.db

# AWS Configuration (for serverless deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Monitoring and Logging
LOG_FILE=gmail_workflow.log
AUDIT_LOG_FILE=audit.log

# GDPR Compliance
DATA_RETENTION_DAYS=30
CONSENT_REQUIRED=True

# Rate Limiting
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600 